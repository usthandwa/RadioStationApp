{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
